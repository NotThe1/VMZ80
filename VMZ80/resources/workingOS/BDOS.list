0577: E8CD         ;			Exit Parameters :	None										 ;
0578: E8CD         ;																			 ;
0579: E8CD         ;---------------------------- Write List Byte - 5 (5) -----------------------;
0580: E8CD         ;BDOS put parameter in C before entering this routine
0581: E8CD             vListOut:                       ; func5 (05 - 05) List Output
