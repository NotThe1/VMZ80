0378: E832             ReturnToCaller:                      ;
0379: E832 3A C9 F4               LD     A,(fResel)           ; get re-selection flag              ;
0380: E835 B7                     OR     A                    ; is it set?                         ;
0381: E836 28 15                  JR     Z,ReturnToCaller1    ;
