0368: E843 77                     LD     (HL),A               ;
0369: E844 3A BA F4               LD     A,(entryDisk)        ; get back original Disk            ;
0370: E847 32 B3 EA               LD     (paramE),A           ; and select it                     ;
0371: E84A CD 12 ED               CALL   SelectCurrent        ;
