0738: E90D         ;--------------------------- Get/Set User Number - 20 (32) -----------------;
0739: E90D         ;  This subroutine either sets or gets the current user number. The current ;
0740: E90D         ; user number determines which file directory entries are matched during all;
0741: E90D         ; disk file operations. When you call this function, the contents of the    ;
0742: E90D         ; E register specify what action is to be taken. IfE=OFFH, then the function;
0743: E90D         ; will return the current user number in the A register. If you set E to a  ;
0744: E90D         ; number in the range 0 to 15 (that is, a valid user number), the function  ;
0745: E90D         ; will set the current user number to this value.                           ;
0746: E90D         ;                                                                           ;
0747: E90D         ;			Function Code	:	C = 0CH                                     ;
0748: E90D         ;			Entry Parameters:	E = 0FFH to get User Number  				;
0749: E90D         ;								  = 0 to 15 to set User Number				;
0750: E90D         ;			Exit Parameters :	A = Current user Number if E was set to 0FFH;
0751: E90D         ;								A = FFH	if incoming Data					;
0752: E90D         ;																			;
0753: E90D         ;                                                                           ;
0754: E90D         ;--------------------------- Get/Set User Number - 20 (32) -----------------;
0755: E90D             vGetSetUserNumber:
0756: E90D 3A B3 EA               LD     A,(paramE)
0757: E910 FE FF                  CP     0FFH
0758: E912 20 07                  JR     NZ,SetUserNumber     ; interrogate user code instead
0759: E914 3A 88 F4               LD     A,(currentUserNumber)
0760: E917 32 B6 EA               LD     (exitParameterByte),A ; exitParameterByte=currentUserNumber
0761: E91A C9                     RET
0762: E91B
0763: E91B             SetUserNumber:
0764: E91B E6 0F                  AND    LO_NIBBLE_MASK
0765: E91D 32 88 F4               LD     (currentUserNumber),A
0766: E920 C9                     RET
