0311: E800             BdosStart:                      ;
0312: E800         ;	LD		A,C                                                             ;
0313: E800         ; 	LD		(FunctionValue),A			; Save the function number          ;
0314: E800         ;
0315: E800         ; Save Calling Arguments                                                    ;
0316: E800 ED 53 B4 EA               LD     (paramDE),DE         ; Save the Word Argument            ;
0317: E804 7B                     LD     A,E                  ;
0318: E805 32 B3 EA               LD     (paramE),A           ; Save the Byte argument            ;
0319: E808         ; Save users Stack pointer                                                  ;
0320: E808 ED 73 AD EA               LD     (usersStack),SP      ; Save the User's stack				;
0321: E80C 31 07 F5               LD     SP,bdosStack         ; We will use our own stack			;
0322: E80F         ;
0323: E80F         ; initialize variables                                                      ;
0324: E80F 21 00 00               LD     HL,0000H             ;
0325: E812 22 B6 EA               LD     (exitParameterWord),HL ; Assume all is well for return     ;
0326: E815 AF                     XOR    A                    ;
0327: E816 32 BB F4               LD     (fcbDisk),A          ; Initialize to 00                  ;
0328: E819 32 B9 F4               LD     (fResel),A           ; Clear re selection flag           ;
0329: E81C         ;
0330: E81C         ; Set up for return to caller when Function Completes                       ;
0331: E81C 21 32 E8               LD     HL,ReturnToCaller    ;
0332: E81F E5                     PUSH   HL                   ;Set up to ReturnToCaller           ;
0333: E820         ;
0334: E820         ; is it a valid function number ?	                                        ;
0335: E820         ;	LD		A,(FunctionValue)			; Get the Function Number           ;
0336: E820 79                     LD     A,C                  ;
0337: E821 FE 28                  CP     functionCount        ; make sure its a good number       ;
0338: E823 D0                     RET    NC                   ; exit if not a valid function      ;
0339: E824         ;
0340: E824         ; Calculate the index and get vector to go to	                            ;
0341: E824 4B                     LD     C,E                  ; Assume byte argument              ;
0342: E825 21 57 E8               LD     HL,functionTable     ; Get table base                    ;
0343: E828 5F                     LD     E,A                  ; Function number in E              ;
0344: E829 16 00                  LD     D,0                  ;
0345: E82B 19                     ADD    HL,DE                ; Have byte location                ;
0346: E82C 19                     ADD    HL,DE                ;  but we want a Word offset        ;
0347: E82D 5E                     LD     E,(HL)               ; Get LSB of vector                 ;
0348: E82E 23                     INC    HL                   ;
0349: E82F 56                     LD     D,(HL)               ; Get MSB of vector                 ;
0350: E830 EB                     EX     DE,HL                ; Vector now in HL                  ;
0351: E831         ;
0352: E831         ; Vector to Function is in HL                                               ;
0353: E831 E9                     JP     (HL)                 ; Put it into the Program Counter   ;
