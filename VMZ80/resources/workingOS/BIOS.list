0412: F65F 22 01 00               LD     (WarmBoot+1),HL      ; Warm Boot Vector
0413: F662
0414: F662 32 05 00               LD     (BDOSE),A
0415: F665 21 00 E8               LD     HL,BDOSEntry         ; BDOS entry point
0416: F668 22 06 00               LD     (BDOSE+1),HL         ; BDOS Vector
0417: F66B
